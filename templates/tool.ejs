<%- include('../public/_header.html') %>
<article class="tool-article">
  <h1><%= tool.name %></h1>
  <p class="tool-desc"><%= tool.description %></p>
  <div class="adsense-slot">
    <!-- AdSense top responsive banner: replace AD_CLIENT and AD_SLOT_TOP -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-AD_CLIENT"
         data-ad-slot="AD_SLOT_TOP"
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  </div>

  <div class="tool-app" id="tool-app" data-tool="<%= tool.id %>">
    <!-- tool UI inserted by scripts.js using the tool id -->
  </div>

  <div class="adsense-slot">
    <!-- In-content ad (replace AD_SLOT_IN) -->
    <ins class="adsbygoogle"
         style="display:block;max-width:728px;margin:0 auto;"
         data-ad-client="ca-pub-AD_CLIENT"
         data-ad-slot="AD_SLOT_IN"
         data-ad-format="auto"></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  </div>

  <section class="howto">
    <h2>How to use <%= tool.name %></h2>
    <p><%= tool.howto || 'Enter values and press calculate.' %></p>
  </section>

  <div class="adsense-slot">
    <!-- AdSense below-results or sidebar slot (replace AD_SLOT_BOTTOM) -->
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-AD_CLIENT"
         data-ad-slot="AD_SLOT_BOTTOM"
         data-ad-format="auto"></ins>
    <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
  </div>

  <!-- SEO / Schema -->
  <script type="application/ld+json">
  <%= JSON.stringify({
    "@context":"https://schema.org",
    "@type":"WebPage",
    "name": tool.name,
    "description": tool.description,
    "mainEntity": { "@type": "Question", "name": tool.name }
  }, null, 2) %>
  </script>

</article>
<%- include('../public/_footer.html') %>